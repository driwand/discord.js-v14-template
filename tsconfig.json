{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "build",
		"sourceMap": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"lib": [
			"es6",
			"dom"
		],
		"esModuleInterop": true,
		"strict": true,
		"typeRoots": [
			"src/@types",
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
